<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvIngredient"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_normal_12"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/margin_normal_12"
        android:layout_marginBottom="@dimen/margin_normal_16"
        >

        <TextView
            android:id="@+id/tvRecipeDescription"
            style="@style/StyleDescriptionRecipeIngredient"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Куриное яйцо"
            android:layout_weight="1"
            android:textAllCaps="true"
            />

        <TextView
            android:id="@+id/tvIngredientQuantity"
            style="@style/StyleDescriptionRecipeIngredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2 штуки"
            android:textAllCaps="true"
            />



    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.cardview.widget.CardView>