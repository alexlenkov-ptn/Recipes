<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundAppColor"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/LinearLayoutButtonCategoryAndFavorites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/linearLayoutButtonMarginHorizontal"
        android:layout_marginBottom="@dimen/linearLayoutButtonMarginBottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/ButtonCategory"
            style="@style/StyleNavButton"
            android:layout_marginEnd="@dimen/halfDistanceBetweenButtonCategoryAndFavorites"
            android:layout_weight="1"
            android:backgroundTint="@color/buttonCategoryColor"
            android:text="@string/text_category"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/ButtonFavorites"
            style="@style/StyleNavButton"
            android:layout_marginStart="@dimen/halfDistanceBetweenButtonCategoryAndFavorites"
            android:layout_weight="1"
            android:backgroundTint="@color/buttonFavoritesColor"
            android:text="@string/text_favorites"
            app:icon="@drawable/ic_heart_empty"
            app:iconGravity="end" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


